# ============================================
# Church Management Application - Staging
# Environment Configuration
# ============================================
# Copy to .env.staging and update values
# ============================================

# Database
DB_USER=church_app_staging
DB_PASSWORD=CHANGE_THIS_STAGING_PASSWORD
DB_NAME=church_app_staging

# JWT - Use different secrets than production!
JWT_SECRET=staging-jwt-secret-minimum-64-characters-change-this-value
JWT_ACCESS_EXPIRY=30m
JWT_REFRESH_EXPIRY=7d

# Redis
REDIS_PASSWORD=CHANGE_THIS_STAGING_REDIS_PASSWORD

# CORS - Update with staging URL
CORS_ORIGIN=https://staging.singburi-adventist.org

# Email - Use mailhog for testing
EMAIL_ENABLED=true
SMTP_HOST=mailhog
SMTP_PORT=1025
SMTP_SECURE=false
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_NAME=Sing Buri Adventist Center (Staging)
SMTP_FROM_EMAIL=staging@singburi-adventist.org

# Sentry - Optional for staging
SENTRY_ENABLED=false
SENTRY_DSN=

# Push Notifications
VAPID_PUBLIC_KEY=
VAPID_PRIVATE_KEY=
VAPID_SUBJECT=mailto:admin@singburi-adventist.org

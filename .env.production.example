# =====================================================
# Church Management Application
# Production Environment Configuration
# =====================================================
# Copy this file to .env and fill in your values
# DO NOT commit the .env file to version control
# =====================================================

# =====================================================
# Database Configuration
# =====================================================
DB_USER=church_app
DB_PASSWORD=your_secure_database_password_here
DB_NAME=church_app

# Full database URL (auto-constructed in docker-compose)
# DATABASE_URL=postgresql://user:password@host:5432/database

# =====================================================
# JWT Configuration
# =====================================================
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_64_character_random_secret_key_here
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# =====================================================
# Application Settings
# =====================================================
NODE_ENV=production
PORT=3000
CORS_ORIGIN=https://yourdomain.com

# =====================================================
# Email Configuration (SMTP)
# =====================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
SMTP_FROM_NAME=Sing Buri Adventist Center
SMTP_FROM_EMAIL=noreply@singburi-adventist.org

# =====================================================
# Redis Configuration
# =====================================================
REDIS_ENABLED=true
REDIS_PASSWORD=your_redis_password_here

# =====================================================
# Sentry Error Monitoring
# =====================================================
SENTRY_ENABLED=true
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=0.1

# =====================================================
# Push Notifications (VAPID)
# =====================================================
# Generate with: npx web-push generate-vapid-keys
VAPID_PUBLIC_KEY=your_vapid_public_key_here
VAPID_PRIVATE_KEY=your_vapid_private_key_here
VAPID_SUBJECT=mailto:admin@singburi-adventist.org

# =====================================================
# Frontend URLs
# =====================================================
VITE_API_URL=/api/v1
VITE_WS_URL=wss://yourdomain.com/ws
VITE_APP_NAME=Sing Buri Adventist Center

# =====================================================
# Backup Configuration
# =====================================================
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket
BACKUP_S3_REGION=ap-southeast-1

# =====================================================
# SSL/TLS Configuration (if using Let's Encrypt)
# =====================================================
LETSENCRYPT_EMAIL=admin@yourdomain.com
DOMAIN=yourdomain.com

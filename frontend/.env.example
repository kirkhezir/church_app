# ============================================
# Church Management Application - Frontend
# Environment Configuration
# ============================================
# Copy this file to .env and update values
# Variables must be prefixed with VITE_ to be
# exposed to the client-side code
# ============================================

# ==========================================
# API CONFIGURATION
# ==========================================
# Backend API URL (without trailing slash)
# Development: http://localhost:3000/api/v1
# Production: https://yourdomain.com/api/v1
VITE_API_URL="http://localhost:3000/api/v1"

# WebSocket URL for real-time notifications
# Development: http://localhost:3000
# Production: https://yourdomain.com
VITE_WS_URL="http://localhost:3000"

# ==========================================
# APPLICATION SETTINGS
# ==========================================
# Application name (displayed in UI and page titles)
VITE_APP_NAME="Sing Buri Adventist Center"

# Application description (meta tags)
VITE_APP_DESCRIPTION="Church Management System"

# ==========================================
# EXTERNAL SERVICES
# ==========================================
# Google Maps embedded iframe URL
# No API key required for embedded maps
# Get embed URL from: https://www.google.com/maps
# Search for location → Share → Embed a map → Copy HTML → Extract URL
VITE_GOOGLE_MAPS_EMBED_URL="https://www.google.com/maps/embed?pb=..."

# ==========================================
# FEATURE FLAGS (Optional)
# ==========================================
# Enable/disable features for specific environments

# Enable debug mode (shows additional logging in console)
# VITE_DEBUG_MODE=false

# Enable analytics (if using any analytics service)
# VITE_ENABLE_ANALYTICS=false

# ==========================================
# THEMING (Optional)
# ==========================================
# Default theme: light, dark, system
# VITE_DEFAULT_THEME=system

# ==========================================
# LOCALIZATION (Optional)
# ==========================================
# Default language (if implementing i18n)
# VITE_DEFAULT_LOCALE=th

# ==========================================
# ERROR TRACKING (SENTRY)
# ==========================================
# Enable Sentry error tracking (recommended for production)
VITE_SENTRY_ENABLED=false
VITE_SENTRY_DSN=""
VITE_SENTRY_ENVIRONMENT="development"
# Optional: release version tag
# VITE_SENTRY_RELEASE="1.0.0"

# ==========================================
# PUSH NOTIFICATIONS
# ==========================================
# VAPID public key for push notification subscription
# Get from backend: npx web-push generate-vapid-keys
# VITE_VAPID_PUBLIC_KEY=""
